<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>
      {%- if title == "Home" -%}
      Capra
      {%- else -%}
      Capra:{{ " " }}
      {%- if collections[collection].metadata.name -%}
      {{ collections[collection].metadata.name }}:{{ " " }}
      {%- endif -%}
      {{ title }}
      {%- endif -%}
  </title>

  <link href="/style.css" rel="stylesheet">

  <link rel="icon" href="/img/favicon.ico">
  <link rel="apple-touch-icon-precomposed" href="/img/favicon152.png">

  <link rel="alternate" type="application/json" href="/feed.json" title="JSON Feed">
  <link rel="alternate" type="application/rss+xml" href="/rss.xml" title="RSS">

  {% if serve -%}
  <script src="http://localhost:35729/livereload.js"></script>
  {%- endif %}
</head>
<body>
  <header>
    <nav>
      {%- if not notitle %}
      <h1>
        <a href="/">Capra</a>
      </h1>
      {%- endif %}
      {%- if collections[collection].metadata.name %}
      <p>
        {%- if collections[collection].metadata.link -%}
        <a href="{{ collections[collection].metadata.link }}">
        {%- endif -%}
        {{ collections[collection].metadata.name }}
        {%- if collections[collection].metadata.link -%}
        </a>
        {%- endif -%}
      </p>
      {%- elseif section -%}
      <p>
        {{ section }}
      </p>
      {%- elseif longtitle -%}
      <p class="title">
        {{ longtitle }}
      </p>
      {%- elseif singleton -%}
      <p class="title">
        {{ title }}
      </p>
      {%- endif %}
    </nav>
  </header>
  <div id="content">
    <main>
    {% block main %}
    {{ contents | safe }}
    {% endblock %}
    </main>
    {% block sidebar %}{% endblock %}
  </div>
</body>
</html>
